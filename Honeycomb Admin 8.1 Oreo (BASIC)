-- Honeycomb 8.1 ORƒíO
local Players = game:GetService("Players")
local TextChatService = game:GetService("TextChatService")
local CoreGui = game:GetService("CoreGui")
local TweenService = game:GetService("TweenService")

local LocalPlayer = Players.LocalPlayer
local prefix = "+"
local theme = "default"

-- Folder for settings
local folder = "HoneyzAdmin"
if not isfolder(folder) then
    makefolder(folder)
end

-- Notifications
local function notify(msg)
    game.StarterGui:SetCore("SendNotification", {
        Title = "Honeycomb üçØ",
        Text = msg,
        Duration = 4
    })
end

-- UI Setup
local ui = Instance.new("ScreenGui", CoreGui)
ui.Name = "Honeycomb_UI"
ui.ResetOnSpawn = false

local main = Instance.new("Frame", ui)
main.Size = UDim2.new(0, 300, 0, 160)
main.Position = UDim2.new(0, 60, 0, 100)
main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true

local corner = Instance.new("UICorner", main)
corner.CornerRadius = UDim.new(0, 10)

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 25)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "üêù Honeycomb - EzCmds"
title.Font = Enum.Font.GothamSemibold
title.TextColor3 = Color3.fromRGB(0, 170, 255)
title.TextScaled = true

local textbox = Instance.new("TextBox", main)
textbox.PlaceholderText = "Command Here.."
textbox.Size = UDim2.new(0.9, 0, 0, 35)
textbox.Position = UDim2.new(0.05, 0, 0, 35)
textbox.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
textbox.TextColor3 = Color3.new(1, 1, 1)
textbox.Font = Enum.Font.Gotham
textbox.TextSize = 18
textbox.ClearTextOnFocus = false

local textboxCorner = Instance.new("UICorner", textbox)
textboxCorner.CornerRadius = UDim.new(0, 8)

local runButton = Instance.new("TextButton", main)
runButton.Size = UDim2.new(0.9, 0, 0, 35)
runButton.Position = UDim2.new(0.05, 0, 0, 90)
runButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
runButton.Text = "Run Command"
runButton.TextColor3 = Color3.new(1, 1, 1)
runButton.Font = Enum.Font.GothamSemibold
runButton.TextScaled = true

local runCorner = Instance.new("UICorner", runButton)
runCorner.CornerRadius = UDim.new(0, 8)

-- Hide Button
local toggleButton = Instance.new("TextButton", ui)
toggleButton.Size = UDim2.new(0, 120, 0, 35)
toggleButton.Position = UDim2.new(0, 10, 0, 10)
toggleButton.Text = "üêù Honeycomb"
toggleButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
toggleButton.TextColor3 = Color3.new(1, 1, 1)
toggleButton.TextScaled = true
toggleButton.Active = true
toggleButton.Draggable = true

local toggleCorner = Instance.new("UICorner", toggleButton)
toggleCorner.CornerRadius = UDim.new(0, 10)

toggleButton.MouseButton1Click:Connect(function()
    main.Visible = not main.Visible
end)

-- Noclip Handler
local noclip = false
game:GetService("RunService").Stepped:Connect(function()
    if noclip and LocalPlayer.Character then
        for _, part in pairs(LocalPlayer.Character:GetDescendants()) do
            if part:IsA("BasePart") and part.CanCollide then
                part.CanCollide = false
            end
        end
    end
end)

local function toggleNoclip(state)
    noclip = state
    notify("Noclip " .. (state and "Enabled" or "Disabled"))
end

-- Theme Handler
local function applyTheme(mode)
    if mode == "rainbow" then
        coroutine.wrap(function()
            while theme == "rainbow" and ui and ui.Parent do
                local hue = tick() % 5 / 5
                local color = Color3.fromHSV(hue, 1, 1)
                main.BackgroundColor3 = color
                runButton.BackgroundColor3 = color
                wait(0.1)
            end
        end)()
    elseif mode == "flame" then
        coroutine.wrap(function()
            while theme == "flame" and ui and ui.Parent do
                local hue = tick() % 3 / 3
                local color = Color3.fromHSV(hue * 0.15, 1, 1)
                main.BackgroundColor3 = color:Lerp(Color3.new(0.1, 0.1, 0.1), 0.3)
                runButton.BackgroundColor3 = color
                wait(0.1)
            end
        end)()
    else
        main.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
        runButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    end
    theme = mode
end

-- Command Handler
local commandsList = {
    ["theme"] = function(arg)
        if arg and (arg == "legacy" or arg == "flame" or arg == "default") then
            applyTheme(arg)
            notify("Theme set to: " .. arg)
        else
            notify("Usage: +theme [legacy|flame|default]")
        end
    end,
    ["cmds"] = function()
        local cmds = {
            "+theme [legacy|flame|default]",
            "+cmds",
            "+rainbow",
            "+tptool",
            "+ws <speed>",
            "+jp <power>",
            "+noclip",
            "+unnoclip",
            "+prefix"
        }
        for i = 1, #cmds, 4 do
            local page = {}
            for j = i, math.min(i + 3, #cmds) do
                table.insert(page, cmds[j])
            end
            notify("Commands Page " .. math.ceil(i / 4) .. ": " .. table.concat(page, ", "))
            wait(4)
        end
    end,
    ["rainbow"] = function()
        theme = "rainbow"
        applyTheme("rainbow")
        notify("Rainbow theme enabled")
    end,
    ["ws"] = function(arg)
        local spd = tonumber(arg)
        if spd and LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid") then
            LocalPlayer.Character.Humanoid.WalkSpeed = spd
        end
    end,
    ["jp"] = function(arg)
        local pow = tonumber(arg)
        if pow and LocalPlayer.Character and LocalPlayer.Character:FindFirstChildOfClass("Humanoid") then
            LocalPlayer.Character.Humanoid.JumpPower = pow
        end
    end,
    ["noclip"] = function()
        toggleNoclip(true)
    end,
    ["unnoclip"] = function()
        toggleNoclip(false)
    end,
    ["prefix"] = function(arg)
        if arg and #arg == 1 then
            prefix = arg
            notify("Prefix changed to: " .. arg)
        else
            notify("Usage: +prefix <char>")
        end
    end,
    ["tptool"] = function()
        local tool = Instance.new("Tool")
        tool.RequiresHandle = false
        tool.Name = "TeleportTool"
        tool.Activated:Connect(function()
            local mouse = LocalPlayer:GetMouse()
            if mouse and LocalPlayer.Character then
                LocalPlayer.Character:MoveTo(mouse.Hit.p)
            end
        end)
        tool.Parent = LocalPlayer.Backpack
        notify("Teleport tool added.")
    end,
}

-- Chat Processor
TextChatService.OnIncomingMessage = function(msg)
    if msg.TextSource and msg.TextSource.UserId == LocalPlayer.UserId then
        local txt = msg.Text
        if txt:sub(1, #prefix) == prefix then
            local args = txt:sub(#prefix + 1):split(" ")
            local cmd = args[1]:lower()
            table.remove(args, 1)
            if commandsList[cmd] then
                commandsList[cmd](unpack(args))
            else
                notify("Unknown command: " .. cmd)
            end
        end
    end
end

-- GUI Run button
runButton.MouseButton1Click:Connect(function()
    local txt = textbox.Text
    if txt:sub(1, #prefix) == prefix then
        local args = txt:sub(#prefix + 1):split(" ")
        local cmd = args[1]:lower()
        table.remove(args, 1)
        if commandsList[cmd] then
            commandsList[cmd](unpack(args))
        else
            notify("Unknown command: " .. cmd)
        end
    end
end)

notify("Honeycomb 8.1 ORƒíO loaded successfully üêù")
